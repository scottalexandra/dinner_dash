<%= div_for item, class: "panel" do %>
  <h3><%= item.title %></h3>
  <h4><%= number_to_currency item.currency %></h4>
  <div id="image">
    <%= image_tag "#{item.image}" %>
  </div>
  <p><%= item.description %></p>
  <% if current_user && current_user.admin? %>
    <%= link_to "Remove from Category", admin_category_path(category, item_id: item.id), method: :patch %> |
    <%= link_to "Hide", admin_item_path(item), method: :delete %> |
    <%= link_to "Edit", edit_admin_item_path(item) %>
  <% else %>
    <%= link_to "Add to Cart", carts_path(item_id: item.id), method: :post %>
  <% end %>
<% end %>
