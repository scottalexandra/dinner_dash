<% order.items.each do |item| %>
  <%= div_for item, class: "panel" do %>
    <h3><%= link_to item.title, categories_path(anchor: "item_#{item.id}")%></h3>
    <div id="image">
      <%= image_tag "#{item.image}" %>
    </div>
    <div id="description">
      <p><%= item.description %></p>
    </div>
    <div id="price">
      <h4>Price</h4>
      <h4><%= number_to_currency item.currency %></h4>
    </div>
    <div id="quantity">
      <h4>Quantity</h4>
      <h4><%= item.quantity %></h4>
    </div>
    <%= link_to "Remove From Cart", carts_path(item_id: item.id), method: :delete %>
  <% end %>
<% end %>
